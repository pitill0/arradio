# Main text
fg='fg:253'
# Preview window text
preview_fg='preview-fg:15'
# Background
bg='bg:237'
# Preview window background
preview_bg='preview-bg:237'
# Highlighted substrings
hl='hl:220'     # yellow-ish
# Text (current line)
fg_plus='fg+:15'
# Background (current line)
bg_plus='bg+:59'
# Gutter on the left
gutter='gutter:237'
# Highlighted substrings (current line)
hl_plus='hl+:220'
# Info line (match counters)
info='info:153'  # soft blue
# Border around the window (--border and --preview)
border='border:110'
# Main scrollbar
scrollbar='scrollbar:110'
# Border around the preview window (--preview)
preview_border='preview-border:110'
# Preview scrollbar
preview_scrollbar='preview-scrollbar:110'
# Horizontal separator on info line
separator='separator:220'
# Border label (--border-label and --preview-label)
